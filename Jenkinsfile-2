pipeline {
    agent any
    stages {
        stage('Set Default Docker Context') {
            steps {
                sh 'docker context use default'
            }
            }
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/ofirzvishaboo/flask_devop_project.git'
            }
        }
        stage('Install dependencies') {
            steps {
                // Install pip packages or other dependencies if needed
                sh 'pip3 install -r requirements.txt'
            }
        }
        stage('Run backend server (background)') {
            steps {
                sh 'nohup python3 rest_app.py &'
            }
        }
        stage('Build Docker image') {
            steps {
                sh 'docker build -t ofirzvishaboo/flask_name_api .'
                sh 'docker-compose up -d backend'
            }
        }
        stage('Test Docker image') {
            steps {
                // Run your custom testing script (e.g., docker_backend_testing.py)
                sh 'python3 docker_backend_testing.py'
                sh 'docker stop my_con'
                sh 'docker rm my_con'
            }
        }
        stage('Push Docker image to Hub') {
            steps {
                script {
                    withDockerRegistry([credentialsId: 'ofir-dockerhub', url: 'https://registry.hub.docker.com']) {
                    sh 'docker push ofirzvishaboo/flask_name_api:latest'
                }
            }
            }
        }
        stage('Update docker-compose image version') {
            steps {
                sh 'echo IMAGE_TAG=${BUILD_NUMBER} > .env'
            }
        }
        stage('Run docker-compose') {
            steps {
                sh 'docker-compose up -d'
            }
        }
        stage('Clean environment') {
            steps {
                sh 'docker-compose down'
                sh 'docker rmi ofirzvishaboo/flask_name_api'
            }
        }
    }
}
